            android:id="@+id/navigateToRemittance"
            app:destination="@+id/remittanceScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/remittanceScreenFragment"
        android:name="io.rekast.momoapi.sample.ui.remittance.RemittanceScreenFragment"
        android:label="@string/remittance_screen">

        <action
            android:id="@+id/navigateToHome"
            app:destination="@+id/mainScreenFragment" />
        <action
            android:id="@+id/navigateToCollectionPay"
            app:destination="@+id/collectionPayScreenFragment" />
        <action
            android:id="@+id/navigateToCollectionWithdraw"
            app:destination="@+id/collectionWithDrawScreenFragment" />
        <action
            android:id="@+id/navigateToDisbursementDeposit"
            app:destination="@+id/disbursementDepositScreenFragment" />
