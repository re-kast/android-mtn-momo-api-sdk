<resources>
    <!-- Base application theme. -->
    <style name="Theme.MTNMomoAPI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/accent_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MTNMomoAPI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MTNMomoAPI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MTNMomoAPI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
